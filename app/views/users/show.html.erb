<h1><%= @user.username %></h1>

<div id='page_back'>

	<% if @user.microposts.any? %>
		<%= link_to "All", user_path %> / 
		<%= link_to "ライブ", user_path(type: "live") %> / 
		<%= link_to "スポーツ", user_path(type: "sport") %>
		<%= render @microposts %>
	<% end %>

	<div id='follow_block'>
		<%= render 'layouts/stats' %>
		<% if current_user.id != @user.id %>
			<%= render 'follow_form' %>
		<% end %>
	</div>

	<%= render 'layouts/archive' %>

	<%= render 'layouts/artist' %>

</div>